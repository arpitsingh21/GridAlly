<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black_button">#3C3C3C</color>
    <color name="description_color">#878787</color>
    <color name="divider_grey">#D4D4D4</color>
    <color name="divider_white">#608DFA</color>
    <color name="grey_title">#626262</color>
    <color name="orange_button">#FD9B32</color>
    <declare-styleable name="MaterialListView"><attr format="integer" name="column_count"/><attr format="integer" name="column_count_portrait"/><attr format="integer" name="column_count_landscape"/></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="big_padding">16dp</dimen>
    <dimen name="bigger_title_size">28sp</dimen>
    <dimen name="button_elevation">2dp</dimen>
    <dimen name="button_press_elevation">2dp</dimen>
    <dimen name="button_size">14sp</dimen>
    <dimen name="card_corner_radius">2dp</dimen>
    <dimen name="card_elevation">4dp</dimen>
    <dimen name="description_size">16sp</dimen>
    <dimen name="floating_button_size">40dp</dimen>
    <dimen name="small_padding">8dp</dimen>
    <dimen name="subtitle_size">20sp</dimen>
    <dimen name="title_size">24sp</dimen>
    <string name="app_name">MaterialList</string>
    <style name="CardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="CardSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textSize">14sp</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textSize">24sp</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Material_Action" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="Material_Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Material_Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Material_Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:textAllCaps">true</item> -->
    </style>
    <style name="Material_Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Material_Card_Head_Image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Material_Card_Rich_Media_Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Material_Card_Subtitle_16dp" parent="Material_Card_Subtitle_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="Material_Card_Subtitle_24dp" parent="Material_Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>
    <style name="Material_Card_Subtitle_Image" parent="Material_Card_Subtitle_16dp">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Material_Card_Supporting_Text_16dp" parent="Material_Card_Supporting_Text_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="Material_Card_Supporting_Text_24dp" parent="Material_Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>
    <style name="Material_Card_Title" parent="Material_Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="Material_Card_Title_Image" parent="Material_Card_Title">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Material_Card_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
    </style>
    <style name="Material_Display_1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="Material_Display_2">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">45sp</item>
    </style>
    <style name="Material_Display_3">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">56sp</item>
    </style>
    <style name="Material_Display_4">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">112sp</item>
    </style>
    <style name="Material_Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#444</item>
    </style>
    <style name="Material_Subhead">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#777</item>
    </style>
    <style name="Material_Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#555</item>
    </style>
    <style name="PrimaryButtonBaseStyle" parent="@style/Material_Action">
        <item name="android:textColor">@color/orange_button</item>
    </style>
</resources>